{% extends 'base.html.twig' %}

{% block title %}Barcode check{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/form.css') }}">
{% endblock %}
{% block body %}
    <div class="center-container">
        <h2>Barcode Scanner</h2>
        <form action="{{ path('barcode_find') }}" method="POST">
            <div class="form-group">
                <input type="text" name="barcode" placeholder="Enter barcode...">
            </div>
            <div class="form-group">
                <button type="submit" class="btn">Check</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/barcode') }}
{% endblock %}
