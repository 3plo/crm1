{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/security.css') }}">
{% endblock %}

{% block body %}
<div class="center-container">
    <h2>Login</h2>

    {% if error %}
        <p style="color: red;">Invalid login or password</p>
        <div style="display: none">{{ error }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <input type="hidden" value="{{ csrf_token('authenticate') }}" name="_csrf_token" required>

        <label for="email">Email:</label>
        <input type="text" id="email" name="email" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>

        <button type="submit">Login</button>
    </form>
{#    TODO add forgot password #}
    <div style="width: 100%; text-align: center; margin-top: 10px">
    <a href="{{ path('register') }}">Registration</a>
    </div>
</div>
{% endblock %}
